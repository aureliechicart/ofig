<%- include('partials/header') %>

<!-- Page Content -->
<div class="container container-main">

  <div class="row">

    <%- include ('partials/leftMenu') %>

    <!-- /.col-lg-3 -->

    <div class="col-lg-9">

      <div class="row">
        <div class="col-lg-6">
          <img class="" src="/images/<%=figurine.name.toLowerCase()%>.png" alt="">
        </div>

        <div class="col-lg-6">
          <div class="card">
            <div class="card-body">
              <h3 class="card-title">
                <%=figurine.name%>
                <div class="badge badge-pill badge-<%=figurine.category.toLowerCase()%>"><%=figurine.category%></div>
              </h3>
              <p class="card-text">Taille réelle : <%=figurine.size%> cm</p>
              <p class="card-text"><%=figurine.description%></p>
              <p class="card-text">
                Note moyenne : &#9733; &#9733; &#9733; &#9733; &#9734;
                <br>
                <a href="#" data-toggle="modal" data-target="#reviewsModal">Détails des avis</a>
              </p>
              <h5>$<%=figurine.price%></h5>
              <p class="card-text">
                <% let globalNote =0;
                 for (const review of reviews) {
                  globalNote += review.note;
                 } 
                 const average = Math.round(globalNote/reviews.length);
                %>

                Note moyenne : <% let index = 0;
                while (index < average) { %>
                &#9733;
                <% index ++
                }
                while (index < 5) { %>
                &#9734;
                <% index ++
                } %>
                <a href="/bookmarks/add/<%=figurine.id%>" class="link-add-bookmarks">+ Ajouter aux favoris</a>
              </p>
            </div>
          </div>

        </div>

      </div>
      <!-- /.row -->

    </div>
    <!-- /.col-lg-9 -->

  </div>
  <!-- /.row -->

</div>
<!-- /.container -->

<%- include('partials/footer') %>